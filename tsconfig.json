{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": ["svelte"],
    "baseUrl": "./src/",
    "module": "ESNext",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strict": true,
    "noEmit": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": ["src/**/*.ts", "rollup.config.mjss"]
}
